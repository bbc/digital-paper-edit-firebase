{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve:dev": "firebase serve -P dev --only functions",
    "serve:prod": "firebase serve -P prod --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy:dev": "firebase deploy -P dev --only functions",
    "deploy:prod": "firebase deploy -P prod --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@bbc/convert-to-audio": "^1.0.0",
    "@google-cloud/storage": "^4.1.3",
    "child-process-promise": "^2.2.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
