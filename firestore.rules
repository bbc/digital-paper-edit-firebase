rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /apps/{appName} {
      // admin write need to be rethought
      allow read, write: if request.auth.uid == "gLoKESQNkVavUfSiqqoSEEEa6Lo2"; 
  		match /users/{userId}/{document=**} {
    		 allow read, write: if request.auth.uid == userId;
    	}
  	}
	}
}